{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>{{ title }}</h1>
        <a href="{{ path('admin_room_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
        </a>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.name) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.capacity) }}
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-12">
                    <h5>Équipements disponibles</h5>
                    <div class="row">
                        <div class="col-md-4">
                            {{ form_row(form.hasWifi) }}
                            {{ form_row(form.hasProjector) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_row(form.hasWhiteboard) }}
                            {{ form_row(form.hasPowerOutlets) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_row(form.hasTV) }}
                            {{ form_row(form.hasAirConditioning) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>{{ button_label|default('Enregistrer') }}
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
